@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<MediaWiz.Forums.ViewModels.SearchViewModel>
@{
    var ForumUrl = Umbraco.GetDictionaryValueOrDefault("Forums.ForumUrl", "/")?.TrimEnd('/');
}

<form action="@ForumUrl/ForumSearch" class="col-10 offset-1">
    <fieldset>
        <div class="form-group">
            <label for="searchIn" class="col-2 col-form-label">@Umbraco.GetDictionaryValueOrDefault("Forums.Search.SearchIn", "Search In")</label>
            <div class="col-6">
                <select id="searchIn" name="searchIn" class="form-control">
                    <option value="Subject">@Umbraco.GetDictionaryValueOrDefault("Forums.Search.SearchIn.Subject", "Subject")</option>
                    <option value="Message">@Umbraco.GetDictionaryValueOrDefault("Forums.Search.SearchIn.Message", "Message")</option>
                    <option value="Username">@Umbraco.GetDictionaryValueOrDefault("Forums.Search.SearchIn.Username", "Post creator")</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="query" class="col-2 col-form-label">@Umbraco.GetDictionaryValueOrDefault("Forums.Search.Querylabel", "Look for")</label>
            <div class="input-group mb-3">
                <input id="query" name="query" placeholder="@Umbraco.GetDictionaryValueOrDefault("Forums.Search.Queryplaceholder","Search terms")" value="@Model.query" type="text" class="form-control" required="required">
                <button name="submit" type="submit" class="btn btn-dark">@Umbraco.GetDictionaryValueOrDefault("Forums.Search", "Search")</button>
            </div>
        </div>
    </fieldset>
</form>
